<div class="container p-4">
    <div class="row">

        {{#each links}}
            <div class="col-md-3">
                <div class="card tex-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <P class="m-2"> {{description}} </P>
                        <P>{{timeago create_at}}</P>
                        <a href="" class="btn btn-danger">BORRAR ENLACE</a>
                        <a href="" class="btn btn-secondary">EDITAR</a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>